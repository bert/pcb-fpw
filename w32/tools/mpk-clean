clean()
{
  buildroot=$builddir/$name-$version-$release
  rm -rf "$buildroot"  
}

if [ -z "$1" ]; then
  echo "Usage: $(basename $0) clean package-name"
  exit 1
fi
pkg=$1

if [ -z "$pkg" ]; then
  echo "Usage: $(basename $0) clean package-name ..."
  exit 1
fi

recipe=$(get_recipe_name $pkg) || exit 1

. $recipe

clean
